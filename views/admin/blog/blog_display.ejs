<%- include('../admin-sidebar.ejs') %>


<%- include('../admin-header.ejs') %>




<div class="content mt-3">
  <div class="animated fadeIn">
      <div class="row">
          <div class="col-md-12">
            <% if(message.length>0){ %>
              <div class="alert alert-success">
                <%= message %>
              </div>
            <% } %>
            <% if(message1.length>0){ %>
              <div class="alert alert-danger">
                <%= message1 %>
              </div>
            <% } %>
              <div class="card">
                  <div class="card-header d-flex justify-content-between">
                      <div>
                        <strong class="card-title">Blogs</strong>
                      </div>
                      <div>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Add blog</button>
                      </div>
                  </div>
                  <div class="card-body">
                      <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                          <thead>
                              <tr>
                                  <th>S.no</th>
                                  <th>Image</th>
                                  <th>Title</th>
                                  <th>Description</th>
                                  <th>Action</th>
                              </tr>
                          </thead>
                          <tbody>
                            <% i=1 %>
                            <% d.forEach((item)=>{ %>

                                <tr>
                                    <td><%= i++ %></td>
                                    <td>
                                        <img src="<%= item.image.url %>" class="img-fluid" width="150px" alt="">
                                    </td>
                                    <td><%= item.title %></td>
                                    <td><%= item.description.slice(0,150) %></td>
                                    <td class="d-flex flex-column">
                                      <a href="/admin/dashboard/blogview/<%= item._id %>" class="btn btn-primary mb-2">View</a>
                                      <a href="/admin/dashboard/blogedit/<%= item._id %>" class="btn btn-warning mb-2">Edit</a>
                                      <a href="/blogdelete/<%= item._id %>" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                                
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
  </div><!-- .animated -->


</div><!-- .content -->
</div><!-- /#right-panel -->



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add Blog Details</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <form action="/bloginsert" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="">Upload Image</label>
              <input type="file" name="image" class="form-control">
            </div>
          <div class="mb-3">
            <label for="">Title</label>
            <input type="text" name="title" class="form-control">
          </div>
          <div class="mb-3">
            <label for="">Description</label>
            <textarea name="description" class="form-control" id="" cols="30" rows="7"></textarea>
          </div>
          <div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
      

<%- include('../admin-footer') %>