<%- include('../admin-sidebar.ejs') %>


<%- include('../admin-header.ejs') %>




<div class="content mt-3">
  <div class="animated fadeIn">
      <div class="row">
          <div class="col-md-12">
            <% if(message.length >0){ %>
                <div class="alert alert-success">
                  <%= message %>
                </div>
              <% } %>
              <div class="card">
                  <div class="card-header d-flex justify-content-between">
                      <div>
                        <strong class="card-title">Contacts</strong>
                      </div>
                  </div>
                  <div class="card-body">
                      <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                          <thead>
                              <tr>
                                  <th>S.no</th>
                                  <th>Name</th>
                                  <th>Email</th>
                                  <th>Subject</th>
                                  <th>Message</th>
                                  <th>Action</th>
                              </tr>
                          </thead>
                          <tbody>
                            <% i=1 %>
                            <% data.forEach((item)=>{ %>
                                <tr>
                                    <td><%= i++ %></td>
                                    <td><%= item.name %></td>
                                    <td><%= item.email %></td>
                                    <td><%= item.subject %></td>
                                    <td><%= item.message %></td>
                                    <td class="d-flex flex-column">
                                      <a href="/contactdelete/<%= item._id %>" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
  </div><!-- .animated -->


</div><!-- .content -->
</div><!-- /#right-panel -->
      

<%- include('../admin-footer') %>

