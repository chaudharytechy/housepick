<%- include('header.ejs') %>

<!-- ======= Intro Section ======= -->
<div class="intro intro-carousel swiper position-relative">

    <div class="swiper-wrapper">

      <% sliders.forEach((sliderItems)=>{ %>
        <div class="swiper-slide carousel-item-a intro-item bg-image" style="background-image: url('<%= sliderItems.slider_image.url %>')">
          <div class="overlay overlay-a"></div>
          <div class="intro-content display-table">
            <div class="table-cell">
              <div class="container">
                <div class="row">
                  <div class="col-lg-8">
                    <div class="intro-body">
                      <p class="intro-title-top"><%= sliderItems.address %>
                        <br> <%= sliderItems.pincode %>
                      </p>
                      <h1 class="intro-title mb-4 ">
                        <span class="color-b"><%= sliderItems.bedroom %>BHK </span> <%= sliderItems.type %>
                        <br> <%= sliderItems.property_name %>
                      </h1>
                      <p class="intro-subtitle intro-price">
                        <a href="/sliderproperty-detail/<%= sliderItems._id %>"><span class="price-a">Buy | ₹ <%= sliderItems.price %></span></a>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
      
    </div>
    <div class="swiper-pagination"></div>
  </div><!-- End Intro Section -->

  <main id="main">

